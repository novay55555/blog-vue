{
  "name": "blog-vue-client",
  "version": "0.1.0",
  "description": "My blog built up by vue",
  "private": true,
  "scripts": {
    "start": "npm run dev:server",
    "dev:client": "vue-cli-service serve",
    "dev:server": "node server",
    "build": "npm run build:server && mv dist/vue-ssr-server-bundle.json bundle && npm run build:client && mv bundle dist/vue-ssr-server-bundle.json",
    "build:client": "cross-env WEBPACK_ENV=client vue-cli-service build",
    "build:server": "cross-env WEBPACK_ENV=node vue-cli-service build",
    "lint": "vue-cli-service lint",
    "production": "cross-env NODE_ENV=production node server"
  },
  "engines": {
    "node": ">=8.0",
    "npm": ">=5.0"
  },
  "author": "gunhawk<gunhawk998@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "ip": "^1.1.5",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lru-cache": "^4.1.3",
    "vue": "^2.5.16",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.3",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.3",
    "@vue/cli-service": "^3.0.0-rc.3",
    "@vue/eslint-config-prettier": "^3.0.0-rc.3",
    "chokidar": "^2.0.4",
    "cross-env": "^5.2.0",
    "koa-webpack-middleware": "^1.0.7",
    "lint-staged": "^6.0.0",
    "memory-fs": "^0.4.1",
    "vue-template-compiler": "^2.5.16",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
